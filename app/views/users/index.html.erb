<div class="center">
  <h1>All Alpha Bloggers</h1>
</div>
<div class="center">
  <%= will_paginate @users %>
</div>
<% @users.each do |user| %>
<ul class="listing">
  <div class="row center">
    <div class="well col-md-4 col-md-offset-4">
      <li><%= link_to gravatar_for(user), user_path(user) %></li>
      <li><%= user.username %></li>
      <li><small><%= pluralize(user.articles.count, "articles")%></small></li>
      <% if logged_in? and current_user.admin? and (user != current_user) %>
      <div class="user_actions">
        <%= link_to 'Delete', user_path(user), method: :delete,
                                               class: "btn btn-xs btn-danger",
                                               data: { confirm: "Do you want to delete this user and all articles created by the user?" } %>
        <%= link_to 'Edit', edit_user_path(user), class: "btn btn-xs btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</ul>
<% end %>
<div class="center">
  <%= will_paginate @users %>
</div>